<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/edt_KullaniciAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_Sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/edt_KullaniciAdi"
        app:layout_constraintTop_toBottomOf="@+id/edt_KullaniciAdi" />

    <Button
        android:id="@+id/btn_UyeOl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="31dp"
        android:onClick="calistir_UyeOl"
        android:text="Üye Ol"
        app:layout_constraintStart_toStartOf="@+id/edt_Sifre"
        app:layout_constraintTop_toBottomOf="@+id/edt_Sifre" />

    <Button
        android:id="@+id/btn_OturumAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:onClick="calistir_OturumAc"
        android:text="Oturum Aç"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_UyeOl"
        app:layout_constraintStart_toEndOf="@+id/btn_UyeOl" />

</android.support.constraint.ConstraintLayout>